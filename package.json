{
	"name": "joshuafolkken-com",
	"private": true,
	"version": "0.17.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"stop:preview": "npx kill-port 4173 || true",
		"prepare": "svelte-kit sync || echo '' && lefthook install",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"lefthook:install": "lefthook install",
		"lefthook:uninstall": "lefthook uninstall",
		"lefthook:commit": "lefthook run pre-commit",
		"lefthook:push": "lefthook run pre-push",
		"check-commit-message": "tsx scripts/check-commit-message.ts",
		"prevent-main-commit": "tsx scripts/prevent-main-commit.ts",
		"git-automation": "tsx scripts/git-automation.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24",
		"@vitest/browser-playwright": "^4.0.8",
		"cspell": "^9.3.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-svelte": "^3.13.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.5.0",
		"lefthook": "^2.0.2",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.5",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.8",
		"vitest-browser-svelte": "^2.0.1"
	}
}
